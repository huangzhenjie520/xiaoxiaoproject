.goodsSwiper {
  width: 100vw;
  height: 100vw;
}
.goodsSwiperImage {
  width: 100vw;
  height: 100vw;
}
.info {
  padding: 30rpx;
}
.infoHead {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.infoHeadLeft {
  color: var(--mainColor);
}
.infoHeadLeft::before {
  content: 'ï¿¥';
  font-size: 80%;
}
.infoHeadRight {
  color: var(--fadeColor);
  display: flex;
  align-items: center;
}
.infoHeadRight .iconfont {
  font-size: 40rpx;
  margin: 10rpx;
  position: relative;
}
.infoHeadRight .iconfont .shareBtn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.detailBody {
  margin-bottom: 94rpx;
  font-size: 0;
  background-color: var(--bgColor);
}
.detailTitle {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.bottomBar {
  background-color: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 94rpx;
}
.bottomBarIcon {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: var(--fadeColor);
  justify-content: center;
  align-items: center;
  position: relative;
}
.bottomBarIcon .contactBtn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.bottomBarIconText {
  font-size: 20rpx;
}
.bottomBarBtn {
  width: 196rpx;
  height: 60rpx;
  color: #fff;
  border-radius: 30rpx;
  display: flex;
  margin-right: 10rpx;
  justify-content: center;
  align-items: center;
  background-color: var(--warnColor);
}
.bottomBarBtn:last-child {
  background-color: var(--dangerColor);
}
