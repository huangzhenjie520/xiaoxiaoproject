.iconfont {
  color: var(--mainColor);
  font-size: 40rpx;
}
.iconfont.icon-xuanzhong {
  color: var(--mainColor);
}
.iconfont.icon-xuanze {
  color: var(--fadeColor);
}
.cartItem {
  display: flex;
}
.cartItemLeft {
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cartItemRight {
  flex: 1;
  position: relative;
}
.cartItem .cartCount {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
}
.cartItem .cartCountBtn {
  display: flex;
  line-height: 30rpx;
  justify-content: center;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  color: #8a8a8a;
  border: 2rpx solid #8a8a8a;
}
.cartItem .cartCountNumber {
  min-width: 50rpx;
  padding: 0 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
  border-top: 1rpx solid var(--fadeColor);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.barInfo {
  display: flex;
  align-items: center;
}
.barSelect {
  display: flex;
  align-items: center;
}
.barSelectTxt {
  color: var(--fadeColor);
  font-size: 24rpx;
}
.barTotalPrice {
  color: var(--mainColor);
}
.barTotalPrice::before {
  content: 'ï¿¥';
  font-size: 80%;
}
.barBtn {
  background-color: var(--mainColor);
  color: #fff;
  font-size: 24rpx;
  height: 52rpx;
  border-radius: 26rpx;
  min-width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.barBtn.disable {
  background-color: var(--fadeColor);
}
.cartEmpty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}
.cartEmptyBtn {
  background-color: var(--mainColor);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 100rpx;
}
